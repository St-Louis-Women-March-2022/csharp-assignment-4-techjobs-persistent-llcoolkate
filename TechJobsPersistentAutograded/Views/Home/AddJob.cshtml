@model TechJobsPersistentAutograded.ViewModels.AddJobViewModel

<h1>Add a Job</h1>

<<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">

  
    <div class="form-group">

        <label asp-for="Name">Job Title</label>
        <input asp-for ="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class = "form-group">
        <label asp-for="EmployerId">Employer</label>
        <select class="form-control" asp-for="EmployerId" asp-items="@Model.Employers"></select>
        <span asp-validation-for="EmployerId"></span>
        <p>
            <a asp-controller="Employer" asp-action="Add">Add New Employer</a>
        </p>
    </div>
    @if (Model.Skills != null)
    {
        <div class="form-group">
        <label asp-for="SkillId">Select Skills: </label>
            @foreach(var skill in Model.Skills)
            {
                <input type="checkbox" name="selectedSkills" value="@skill.Id"/>
                <label asp-for="@skill.Name">@skill.Name</label>
            }
        <a asp-controller="Skill" asp-action="Add">Add Skill</a>
        </div>
    }
    <input type="submit" value="Add Job" />

</form>


